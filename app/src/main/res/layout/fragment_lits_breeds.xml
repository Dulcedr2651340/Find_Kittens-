<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAE7F2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_keyboard_arrow_left_black_24dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_toLeftOf="@+id/imageView3"
            app:srcCompat="@drawable/ic_bx_share_alt_1" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_rectangle_344" />
    </RelativeLayout>



        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/image_breeds_dtls"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            app:srcCompat="@drawable/cat25" />

    <TextView
        android:id="@+id/name_breeds_dlts"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-60dp"
        android:fontFamily="@font/mclaren"
        android:gravity="center"
        android:text="Name cat"
        android:textColor="@color/black"
        android:textSize="30dp">

    </TextView>

    <RelativeLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                app:srcCompat="@drawable/black_cat" />

        <TextView
            android:id="@+id/life_span_breeds"
            android:layout_width="59dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/imageView6"
            android:text="Popular"
            android:textColor="#FF9800" />
        </RelativeLayout>


    <TextView
        android:id="@+id/temperament_breeds"
        android:layout_width="287dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:textColor="#673AB7"
        android:gravity="center"
        android:text="Popular" />

        <RelativeLayout
            android:layout_width="340dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                app:srcCompat="@drawable/ic_action_location" />

            <TextView
                android:id="@+id/origin_breeds_dlts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#E91E63"
                android:layout_marginStart="27dp"
                android:layout_toRightOf="@+id/imageView7"
                android:text="Popular" />
        </RelativeLayout>
</LinearLayout>