<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAE7F2"
    tools:context=".DetailsActivity">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:layout_marginEnd="16dp"
          android:layout_marginTop="16dp">

         <ImageView
             android:id="@+id/imageView5"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             app:srcCompat="@drawable/ic_keyboard_arrow_left_black_24dp" />

         <ImageView
             android:id="@+id/imageView6"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_toLeftOf="@+id/imageView7"
             android:layout_marginEnd="20dp"
             app:srcCompat="@drawable/ic_bx_share_alt_1" />

         <ImageView
             android:id="@+id/imageView7"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentEnd="true"
             app:srcCompat="@drawable/ic_rectangle_344" />
      </RelativeLayout>

      <com.android.volley.toolbox.NetworkImageView
          android:layout_gravity="center"
          android:id="@+id/image_lits"
          android:layout_width="285dp"
          android:layout_height="305dp"
          android:layout_marginTop="20dp"
          android:background="@color/white"
          app:srcCompat="@drawable/cat9" />

      <RelativeLayout
          android:layout_width="260dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="24dp"
          android:layout_gravity="center">
         <TextView
             android:id="@+id/view_lits"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="1000"
             android:textColor="#272670"
             android:textSize="18sp" />
         <TextView
             android:id="@+id/saved_lits"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="105"
             android:textColor="#272670"
             android:textSize="18sp"
             android:layout_marginEnd="85dp"
             android:layout_toLeftOf="@+id/loveit_lits"/>

         <TextView
             android:id="@+id/loveit_lits"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="375"
             android:textColor="#272670"
             android:textSize="18sp"
             android:layout_alignParentEnd="true"/>

      </RelativeLayout>
      <RelativeLayout
          android:layout_width="260dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center">

         <TextView
             android:id="@+id/textView7"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="views"
             android:textSize="12sp"
             />

         <TextView
             android:id="@+id/textView8"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Saved"
             android:textSize="12sp"
             android:layout_toLeftOf="@+id/textView9"
             android:layout_marginEnd="77dp"
             />

         <TextView
             android:id="@+id/textView9"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Love it"
             android:textSize="12sp"
             android:layout_alignParentEnd="true"
             />
      </RelativeLayout>

      <TextView
          android:id="@+id/location_lits"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="17dp"
          android:layout_marginTop="24dp"
          android:text="Cute cats"
          android:textColor="#FF6813"
          android:textSize="15sp"
          />

      <TextView
          android:id="@+id/namecat_lits"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="17dp"
          android:layout_marginTop="4dp"
          android:text="Bonnie"
          android:textColor="#091020"
          android:textSize="24sp"
          />

      <TextView
          android:id="@+id/description_lits_categories"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:gravity="center"
          android:layout_marginStart="16dp"
          android:layout_marginTop="28dp"
          android:layout_marginEnd="16dp"
          android:lineSpacingExtra="2dp"
          android:text="Those who play with cats should expect to be scratched"
          />

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:layout_marginEnd="16dp"
          android:layout_marginTop="60dp">
         <ImageView
             android:id="@+id/imageView10"
             android:layout_width="45dp"
             android:layout_height="45dp"
             app:srcCompat="@drawable/contac" />

         <TextView
             android:id="@+id/sv_lits"
             android:layout_width="24dp"
             android:layout_height="25dp"
             android:layout_marginStart="10dp"
             android:layout_toRightOf="@+id/imageView10"
             android:text="01"
             android:textColor="#272670"
             android:textSize="24sp" />

         <ImageView
             android:id="@+id/imageView11"
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:layout_alignParentEnd="true"
             android:layout_marginStart="220dp"
             app:srcCompat="@drawable/ic_heart" />
      </RelativeLayout>

   </LinearLayout>
</ScrollView>
